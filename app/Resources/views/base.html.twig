<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    {% block redirect %}{% endblock %}
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    <link rel="stylesheet" type="text/css" href="{{ asset('bootstrap/dist/css/bootstrap.min.css') }}" />
    {% block stylesheets %}{% endblock %}
    <style>
        body
        {
            padding-top: 70px;
        }
    </style>
</head>
<body>
    {% if is_granted('ROLE_USER') %}
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">Shop</a>
                </div>
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li><a href="{{ path('homepage') }}">Index</a></li>
                        <li><a href="{{ path('showproducts') }}">Products</a></li>
                        <li><a href="{{ path('shop') }}">Shop</a></li>
                        <li><a href="{{ path('cart') }}">Cart</a></li>
                        <li><a href="{{ path('orderList') }}">My Orders</a></li>
                        <li><a href="{{ path('logout') }}">Logout</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    {% endif %}

    {% if not is_granted('ROLE_USER') %}
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">Shop</a>
                </div>
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li><a href="{{ path('homepage') }}">Index</a></li>
                        <li><a href="{{ path('login') }}">Login</a></li>
                        <li><a href="{{ path('registration') }}">Registration</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    {% endif %}

{% block body %}{% endblock %}
{% block javascripts %}{% endblock %}
    <script src="{{ asset('bootstrap/dist/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('jquery/dist/jquery.min.js') }}"></script>
</body>
</html>